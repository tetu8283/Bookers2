<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
   <table>
        <tbody>
            <tr>
                 <td><%= link_to 'Show', book_path(@book.id) %></td>
                 <td><%= link_to 'Back', books_path %></td>
            </tr>
        </tbody>
    </table>
  
<% end %>

