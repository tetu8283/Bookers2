<!--<main>-->
  <% if user.errors.any? %>
  <%= user.errors.count %>件のエラーが発生しました
  <ul>
    <% user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  
      <div class="col-md-3">
        <h2>User info</h2>
          <label><%= image_tag user.get_profile_image(100,100) %></label>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <% if user == current_user %>
            <!--btn-outline-darkでボタンの枠を作成-->
              <%= link_to edit_user_path(user), class: 'btn btn-outline-dark btn-block' do %>
                <i class="fa-solid fa-user-gear"></i>
              <% end %>
            <% end %>
          </div>
         
          
          <h2 class="mt-3">New Book</h2>
          <%= form_with url: books_path, model: book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
              <%= f.text_field :title, class: 'form-control book_title' %>
          </div>
           <div class="form-group">
            <label for="book_title">Opinion</label>
              <%= f.text_area :body, class: 'form-control book_body' %>
          </div>
           <div class="form-group">
              <%= f.submit 'Create Book', class: 'btn btn-success btn-sm btn-block' %>
          </div>
          <% end %>
      </div>
