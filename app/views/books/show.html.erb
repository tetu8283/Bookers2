<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/info', user: @user,book: @book %>
      
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
                <tr>
                  <td>
                    <!--そのbookの投稿者の詳細ページへリンク-->
                    <%= link_to user_path(@book.user) do %>
                      <%= image_tag @book.user.get_profile_image(80,80) %><br>
                      <%= @book.user.name %>
                    <% end %>
                  </td>
                  <td><%= link_to @book.title, book_path(@book) %></td>
                  <td><%= @book.body %></td>
                  <% if @book.user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm bg-success text-light' %></td>
                   <!--このボタンで削除するのでmethodを入れている-->
                    <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-sm bg-danger text-light' %></td>
                  <% end %>
                </tr>
             
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>
